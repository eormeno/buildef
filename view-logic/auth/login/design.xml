<guest-layout>
	<container-form action="login">
		<input-email name="email" placeholder="Your email" label="Email" required="true" />
		<input-password name="password" placeholder="Password" label="Password" required="true" />
		<input-check name="remember" label="Remember me" />
		<container layout="horizontal" align="right">
			<button-link text="I forget the password" route="/forgetPassword" />
			<button-primary text="Login" type="submit" />
		</container>
	</container-form>
</guest-layout>
