<class.change-parent abstract="true">
    <param name="attribute" type="string"/>
    <param name="attribute-value" type="string"/>
    <param name="var" type="string"/>
    <param name="var-value" type="string"/>
    <param name="operator" type="enum">
        <enum name="equals"/>
        <enum name="not-equals"/>
        <enum name="greater-than"/>
        <enum name="less-than"/>
        <enum name="greater-than-or-equals"/>
        <enum name="less-than-or-equals"/>
    </param>
    <param name="action" type="enum" value="override">
        <enum name="do"/>
        <enum name="override"/>
        <enum name="append"/>
        <enum name="prepend"/>
        <enum name="merge"/>
        <enum name="remove"/>
    </param>
    <slot />
    <else />
</class.change-parent>
