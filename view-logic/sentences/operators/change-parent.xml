<class.change-parent abstract="true">
    <param name="attribute" type="string" required="true"/>
    <param name="attribute-value" type="string" required="true"/>
    <param name="var" type="string" value="null"/>
    <param name="var-value" type="string" value="null"/>
    <param name="operator" type="enum">
        <enum name="equals"/>
        <enum name="not-equals"/>
        <enum name="greater-than"/>
        <enum name="less-than"/>
        <enum name="greater-than-or-equals"/>
        <enum name="less-than-or-equals"/>
    </param>
    <param name="action" type="enum" value="override">
        <enum name="override"/>
        <enum name="append"/>
        <enum name="prepend"/>
        <enum name="merge"/>
        <enum name="remove"/>
    </param>
</class.change-parent>
